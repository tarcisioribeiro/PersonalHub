# ============================================================================
# PERSONALHUB - Configuração de Variáveis de Ambiente
# ============================================================================
# Copie este arquivo para .env e preencha com seus valores
# Use: cp .env.example .env
# Ou execute: ./setup-env.sh para configuração interativa
# ============================================================================

# ============================================================================
# DATABASE (PostgreSQL)
# ============================================================================
# Host do banco de dados (use 'db' para Docker, 'localhost' para local)
DB_HOST=db

# Porta do PostgreSQL (interna: 5432, externa: 5435)
DB_PORT=5435

# Nome do banco de dados
DB_NAME=personalhub_db

# Usuário do banco de dados
DB_USER=personalhub_user

# Senha do banco de dados (ALTERE ISSO!)
DB_PASSWORD=change_this_secure_password

# ============================================================================
# DJANGO (Backend API)
# ============================================================================
# Secret Key do Django (GERE UMA NOVA!)
# Gerar com: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-this-to-a-long-random-string-for-production

# Modo debug (True para desenvolvimento, False para produção)
DEBUG=True

# Hosts permitidos (separados por vírgula)
ALLOWED_HOSTS=localhost,127.0.0.1

# Origens CORS permitidas (separadas por vírgula)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================================================
# DJANGO SUPERUSER (Usuário Admin Inicial)
# ============================================================================
# Username do superusuário Django
DJANGO_SUPERUSER_USERNAME=admin

# Email do superusuário Django
DJANGO_SUPERUSER_EMAIL=admin@personalhub.local

# Senha do superusuário Django (ALTERE ISSO!)
DJANGO_SUPERUSER_PASSWORD=change_this_admin_password

# ============================================================================
# ENCRYPTION (Criptografia de Campos Sensíveis)
# ============================================================================
# Chave Fernet para criptografia de CVV e números de cartão (GERE UMA NOVA!)
# Gerar com: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=change_this_fernet_encryption_key

# ============================================================================
# LOGGING
# ============================================================================
# Formato de log (json ou simple)
LOG_FORMAT=json

# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# APPLICATION PORTS
# ============================================================================
# Porta da API Backend
API_PORT=8002

# Porta do Frontend React
FRONTEND_PORT=3000

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
# URL base da API para o frontend (Vite)
# Use 'http://localhost:8002' para desenvolvimento local
VITE_API_BASE_URL=http://localhost:8002

# ============================================================================
# SECURITY SETTINGS (Production)
# ============================================================================
# Configurações de segurança para produção
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ============================================================================
# EMAIL CONFIGURATION (Opcional)
# ============================================================================
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-specific-password
# DEFAULT_FROM_EMAIL=PersonalHub <noreply@personalhub.com>

# ============================================================================
# AWS S3 CONFIGURATION (Opcional - para arquivos de mídia)
# ============================================================================
# USE_S3=False
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# ============================================================================
# REDIS CONFIGURATION (Opcional - para cache)
# ============================================================================
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_DB=0

# ============================================================================
# SENTRY CONFIGURATION (Opcional - para rastreamento de erros)
# ============================================================================
# SENTRY_DSN=your-sentry-dsn
# SENTRY_ENVIRONMENT=production

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
# Diretório de backup (relativo à raiz do projeto)
BACKUP_DIR=./backups

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
# Habilitar Django Debug Toolbar
ENABLE_DEBUG_TOOLBAR=False

# Mostrar queries SQL no console
SHOW_SQL_QUERIES=False

# ============================================================================
# NOTAS IMPORTANTES
# ============================================================================
# 1. NUNCA commite o arquivo .env no git (está no .gitignore)
# 2. SEMPRE altere SECRET_KEY e ENCRYPTION_KEY em produção
# 3. Use senhas fortes para DB_PASSWORD e DJANGO_SUPERUSER_PASSWORD
# 4. A ENCRYPTION_KEY deve ter exatamente 44 caracteres em base64
# 5. Não altere ENCRYPTION_KEY após criptografar dados (irrecuperável!)
# 6. Para produção, configure DEBUG=False
# 7. Configure ALLOWED_HOSTS e CORS_ALLOWED_ORIGINS apropriadamente
# ============================================================================
